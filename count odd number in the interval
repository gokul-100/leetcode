
class Solution {
    public int countOdds(int low, int high) {
       
      if(low % 2==0 && high % 2==0){
          return (high - low) /2 ;
      }
      return (high-low)/2 +1;

        
    }
}
class Main{
    public static void main(String []args){
        Solution obj=new Solution();
        int result=obj.countOdds(3,7);
        System.out.println(result);
    }




}
